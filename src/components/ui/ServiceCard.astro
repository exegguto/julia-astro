---
import type { Service } from '../../data/services';

interface Props {
  service: Service;
}

const { service } = Astro.props;
---

<div class="service-card card-hover bg-white rounded-2xl overflow-hidden border border-warm-300 flex flex-col group">
  {/* Фото */}
  {service.image && (
    <div class="aspect-[16/10] overflow-hidden">
      <img
        src={service.image}
        alt={service.title}
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
        loading="lazy"
        decoding="async"
      />
    </div>
  )}
  <div class="p-6 sm:p-8 flex flex-col flex-grow">
    <h3 class="font-heading text-xl font-semibold mb-3 text-dark-900">{service.title}</h3>
    <p class="text-dark-500 leading-relaxed flex-grow">{service.description}</p>
  </div>
</div>

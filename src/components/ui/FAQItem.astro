---
import type { FAQItem as FAQItemType } from '../../data/faq';

interface Props {
  item: FAQItemType;
  index: number;
}

const { item, index } = Astro.props;
---

<div class="faq-item border-b border-cream-200 last:border-b-0" data-index={index}>
  <button
    class="faq-question w-full flex items-center justify-between py-5 px-2 text-left cursor-pointer group"
    aria-expanded="false"
  >
    <span class="font-heading text-lg font-semibold text-gray-900 pr-4 group-hover:text-gold-600 transition-colors duration-300">
      {item.question}
    </span>
    <svg class="faq-icon w-6 h-6 text-gold-500 shrink-0 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div class="faq-answer overflow-hidden h-0">
    <p class="pb-5 px-2 text-gray-600 leading-relaxed">{item.answer}</p>
  </div>
</div>

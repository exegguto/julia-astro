---
import type { Review } from '../../data/reviews';

interface Props {
  review: Review;
}

const { review } = Astro.props;
---

<div class="review-card bg-white rounded-2xl p-6 sm:p-8 border border-warm-300 shadow-sm flex flex-col h-full">
  <!-- Звёзды рейтинга -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: review.rating }).map(() => (
      <svg class="w-4 h-4 text-lavender-400" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>

  <!-- Текст отзыва -->
  <blockquote class="text-dark-600 leading-relaxed mb-6 flex-grow text-sm sm:text-base">
    &laquo;{review.text}&raquo;
  </blockquote>

  <!-- Автор -->
  <div class="flex items-center gap-3 mt-auto pt-4 border-t border-warm-300">
    <div class="w-10 h-10 rounded-full bg-gradient-to-br from-lavender-200 to-peach-200 flex items-center justify-center text-dark-800 font-semibold text-sm flex-shrink-0">
      {review.name.charAt(0)}
    </div>
    <div class="min-w-0">
      <p class="font-medium text-dark-900 text-sm">{review.name}</p>
      <p class="text-xs text-dark-400 truncate">{review.service} &middot; {review.date}</p>
    </div>
  </div>
</div>

---
import Button from '../ui/Button.astro';
---

<section class="relative min-h-screen flex items-center overflow-hidden" id="hero">
  <!-- Фон — чистый белый -->
  <div class="absolute inset-0 bg-white"></div>

  <!-- Солнечная система — на всю высоту экрана, центр = правая часть (где фото) -->
  <div class="absolute inset-0 pointer-events-none flex items-center justify-center md:justify-end md:pr-[12%] lg:pr-[14%]">
    <svg class="h-[90vh] w-auto text-lavender-300" viewBox="0 0 32 32" fill="none" preserveAspectRatio="xMidYMid meet">
      <!-- Солнце (центр) -->
      <circle cx="16" cy="16" r="3.5" fill="currentColor" opacity="0.12"/>
      <!-- Лучи солнца -->
      <line x1="16" y1="10.5" x2="16" y2="9" stroke="currentColor" stroke-width="0.6" stroke-linecap="round" opacity="0.15"/>
      <line x1="16" y1="21.5" x2="16" y2="23" stroke="currentColor" stroke-width="0.6" stroke-linecap="round" opacity="0.15"/>
      <line x1="10.5" y1="16" x2="9" y2="16" stroke="currentColor" stroke-width="0.6" stroke-linecap="round" opacity="0.15"/>
      <line x1="21.5" y1="16" x2="23" y2="16" stroke="currentColor" stroke-width="0.6" stroke-linecap="round" opacity="0.15"/>
      <line x1="12.1" y1="12.1" x2="11" y2="11" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" opacity="0.12"/>
      <line x1="19.9" y1="12.1" x2="21" y2="11" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" opacity="0.12"/>
      <line x1="12.1" y1="19.9" x2="11" y2="21" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" opacity="0.12"/>
      <line x1="19.9" y1="19.9" x2="21" y2="21" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" opacity="0.12"/>
      <!-- Орбита 1 (Меркурий) -->
      <circle cx="16" cy="16" r="6.5" stroke="currentColor" stroke-width="0.3" opacity="0.15"/>
      <circle cx="22.5" cy="16" r="1" fill="currentColor" opacity="0.2"/>
      <!-- Орбита 2 (Венера) -->
      <circle cx="16" cy="16" r="9" stroke="currentColor" stroke-width="0.3" opacity="0.12"/>
      <circle cx="16" cy="7" r="1.2" fill="currentColor" opacity="0.25"/>
      <!-- Орбита 3 (Земля + Луна) -->
      <circle cx="16" cy="16" r="12" stroke="currentColor" stroke-width="0.3" opacity="0.1"/>
      <!-- Земля -->
      <circle cx="4" cy="16" r="1.5" fill="currentColor" opacity="0.25"/>
      <!-- Луна у Земли -->
      <circle cx="5.8" cy="14.5" r="0.7" fill="currentColor" opacity="0.15"/>
      <!-- Далёкая орбита (Марс) -->
      <circle cx="16" cy="16" r="15" stroke="currentColor" stroke-width="0.2" opacity="0.07"/>
      <circle cx="26" cy="22" r="0.9" fill="currentColor" opacity="0.12"/>
    </svg>
  </div>

  <!-- Анимированные звёзды (нежная лаванда) -->
  <div class="absolute inset-0 pointer-events-none" id="hero-stars">
    <svg class="hero-star absolute top-[10%] left-[15%] w-3 h-3 text-lavender-300/40" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[20%] right-[20%] w-2.5 h-2.5 text-peach-300/30" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[45%] left-[5%] w-4 h-4 text-lavender-200/30" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[60%] right-[8%] w-3 h-3 text-peach-200/25" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[75%] left-[30%] w-2 h-2 text-lavender-300/30" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[15%] left-[55%] w-3.5 h-3.5 text-lavender-400/20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
    <svg class="hero-star absolute top-[80%] right-[35%] w-3 h-3 text-peach-200/25" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l2.09 6.26L20 10l-5.91 1.74L12 18l-2.09-6.26L4 10l5.91-1.74L12 2z"/></svg>
  </div>

  <!-- Контент: два столбца -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full pt-28 pb-16 md:pt-32 md:pb-20">
    <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Текст слева -->
      <div class="order-2 md:order-1 text-center md:text-left">
        <p class="hero-subtitle font-script text-peach-400 text-xl sm:text-2xl mb-4 opacity-0">Астролог Юлия Плотникова</p>
        <h1 class="hero-title font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-dark-900 leading-tight mb-6 opacity-0">
          Узнайте свой путь<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-lavender-400 to-peach-400">через звёзды</span>
        </h1>
        <p class="hero-desc text-lg sm:text-xl text-dark-500 max-w-lg leading-relaxed mb-10 opacity-0 mx-auto md:mx-0">
          Персональные астрологические консультации, которые помогут вам понять себя, раскрыть потенциал и принять верные решения
        </p>
        <div class="hero-cta flex flex-col sm:flex-row gap-4 opacity-0 justify-center md:justify-start">
          <Button href="https://t.me/+79100051667" variant="primary" size="lg">
            ✦ Записаться
          </Button>
          <Button href="#services" variant="outline" size="lg">
            Узнать об услугах
          </Button>
        </div>
      </div>

      <!-- Фото справа -->
      <div class="order-1 md:order-2 flex justify-center hero-photo-wrapper">
        <div class="relative w-[280px] sm:w-[340px] lg:w-[400px]">
          <!-- Фото -->
          <div class="relative aspect-[3/4] rounded-3xl overflow-hidden shadow-2xl shadow-lavender-400/20">
            <img
              src="/images/photos/hero.jpg"
              alt="Астролог Юлия Плотникова"
              class="w-full h-full object-cover"
              loading="eager"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900/10 via-transparent to-transparent"></div>
          </div>

          <!-- Декоративный акцент -->
          <div class="absolute -bottom-3 -right-3 w-20 h-20 bg-lavender-200/40 rounded-full blur-xl"></div>
          <div class="absolute -top-3 -left-3 w-16 h-16 bg-peach-100/30 rounded-full blur-xl"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Индикатор скролла -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <svg class="w-6 h-6 text-lavender-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

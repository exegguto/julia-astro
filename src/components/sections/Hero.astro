---
import Button from '../ui/Button.astro';
---

<section class="relative min-h-screen flex items-center overflow-hidden" id="hero">
  <!-- Фон — чистый белый -->
  <div class="absolute inset-0 bg-white"></div>

  <!-- Контент: два столбца -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full pt-28 pb-16 md:pt-32 md:pb-20">
    <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Текст слева -->
      <div class="order-2 md:order-1 text-center md:text-left">
        <p class="hero-subtitle font-script text-peach-400 text-xl sm:text-2xl mb-4 opacity-0">Астролог Юлия Плотникова</p>
        <h1 class="hero-title font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-dark-900 leading-tight mb-6 opacity-0">
          Узнайте свой путь<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-lavender-400 to-peach-400">через звёзды</span>
        </h1>
        <p class="hero-desc text-lg sm:text-xl text-dark-500 max-w-lg leading-relaxed mb-10 opacity-0 mx-auto md:mx-0">
          Персональные астрологические консультации, которые помогут вам понять себя, раскрыть потенциал и принять верные решения
        </p>
        <div class="hero-cta flex flex-col sm:flex-row gap-4 opacity-0 justify-center md:justify-start">
          <Button href="https://t.me/+79100051667" variant="primary" size="lg">
            ✦ Записаться
          </Button>
          <Button href="#services" variant="outline" size="lg">
            Узнать об услугах
          </Button>
        </div>
      </div>

      <!-- Фото справа + Солнечная система на фоне -->
      <div class="order-1 md:order-2 flex justify-center hero-photo-wrapper">
        <div class="relative w-[280px] sm:w-[340px] lg:w-[400px]">

          <!-- Солнечная система — центр = центр фото, размер = 90vh -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none solar-system" style="width: 85vh; height: 85vh;" aria-hidden="true">

            <!-- Солнце — центральное свечение с пульсацией -->
            <div class="sun-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[10%] h-[10%] rounded-full" style="background: radial-gradient(circle, rgba(192,132,252,0.2) 0%, rgba(192,132,252,0.06) 50%, transparent 75%);"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[4.5%] h-[4.5%] rounded-full" style="background: radial-gradient(circle, rgba(192,132,252,0.35) 0%, rgba(176,125,151,0.15) 60%, transparent 100%);"></div>

            <!-- Лучи солнца -->
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[14%] h-[1px] bg-gradient-to-r from-transparent via-lavender-300/15 to-transparent"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-[14%] w-[1px] bg-gradient-to-b from-transparent via-lavender-300/15 to-transparent"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[11%] h-[1px] bg-gradient-to-r from-transparent via-lavender-300/10 to-transparent rotate-45"></div>
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[11%] h-[1px] bg-gradient-to-r from-transparent via-lavender-300/10 to-transparent -rotate-45"></div>

            <!-- Орбита 1 — Меркурий ☿ -->
            <div class="orbit orbit-1 absolute top-1/2 left-1/2 w-[16%] h-[16%] rounded-full" style="border: 2.5px solid rgba(216,180,254,0.25);">
              <div class="planet absolute -top-[7px] left-1/2 -translate-x-1/2">
                <div class="w-[14px] h-[14px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(200,200,210,0.8), rgba(160,160,180,0.4)); box-shadow: 0 0 8px rgba(200,200,210,0.3);"></div>
              </div>
            </div>

            <!-- Орбита 2 — Венера ♀ -->
            <div class="orbit orbit-2 absolute top-1/2 left-1/2 w-[26%] h-[26%] rounded-full" style="border: 2.5px solid rgba(216,180,254,0.22);">
              <div class="planet absolute -top-[9px] left-1/2 -translate-x-1/2">
                <div class="w-[18px] h-[18px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(230,190,160,0.75), rgba(200,160,120,0.35)); box-shadow: 0 0 10px rgba(230,190,160,0.25);"></div>
              </div>
            </div>

            <!-- Орбита 3 — Земля ♁ + Луна ☽ -->
            <div class="orbit orbit-3 absolute top-1/2 left-1/2 w-[36%] h-[36%] rounded-full" style="border: 2.5px solid rgba(216,180,254,0.18);">
              <div class="planet absolute -top-[11px] left-1/2 -translate-x-1/2">
                <div class="relative w-[22px] h-[22px]">
                  <div class="w-full h-full rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(100,180,230,0.7), rgba(60,130,200,0.3)); box-shadow: 0 0 12px rgba(100,180,230,0.25);"></div>
                  <div class="moon-orbit absolute top-[11px] left-[11px] -translate-x-1/2 -translate-y-1/2 w-[42px] h-[42px]">
                    <div class="absolute -top-[4px] left-1/2 -translate-x-1/2 w-[9px] h-[9px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(220,220,230,0.7), rgba(180,180,200,0.3));"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Орбита 4 — Марс ♂ -->
            <div class="orbit orbit-4 absolute top-1/2 left-1/2 w-[46%] h-[46%] rounded-full" style="border: 2.5px solid rgba(216,180,254,0.15);">
              <div class="planet absolute -top-[8px] left-1/2 -translate-x-1/2">
                <div class="w-[16px] h-[16px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(220,120,100,0.7), rgba(180,80,60,0.3)); box-shadow: 0 0 10px rgba(220,120,100,0.2);"></div>
              </div>
            </div>

            <!-- Орбита 5 — Юпитер ♃ -->
            <div class="orbit orbit-5 absolute top-1/2 left-1/2 w-[58%] h-[58%] rounded-full" style="border: 2.5px solid rgba(216,180,254,0.12);">
              <div class="planet absolute -top-[13px] left-1/2 -translate-x-1/2">
                <div class="w-[26px] h-[26px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(210,180,140,0.7), rgba(180,150,110,0.3)); box-shadow: 0 0 14px rgba(210,180,140,0.2);"></div>
              </div>
            </div>

            <!-- Орбита 6 — Сатурн ♄ -->
            <div class="orbit orbit-6 absolute top-1/2 left-1/2 w-[70%] h-[70%] rounded-full" style="border: 2px solid rgba(216,180,254,0.10);">
              <div class="planet absolute -top-[12px] left-1/2 -translate-x-1/2">
                <div class="relative">
                  <div class="w-[22px] h-[22px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(220,200,150,0.65), rgba(190,170,120,0.25)); box-shadow: 0 0 12px rgba(220,200,150,0.2);"></div>
                  <!-- Кольцо Сатурна -->
                  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[36px] h-[10px] rounded-full" style="border: 1.5px solid rgba(220,200,150,0.3); transform: translate(-50%, -50%) rotate(-20deg);"></div>
                </div>
              </div>
            </div>

            <!-- Орбита 7 — Уран ♅ -->
            <div class="orbit orbit-7 absolute top-1/2 left-1/2 w-[80%] h-[80%] rounded-full" style="border: 2px solid rgba(216,180,254,0.08);">
              <div class="planet absolute -top-[9px] left-1/2 -translate-x-1/2">
                <div class="w-[18px] h-[18px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(150,220,230,0.6), rgba(100,190,210,0.25)); box-shadow: 0 0 10px rgba(150,220,230,0.15);"></div>
              </div>
            </div>

            <!-- Орбита 8 — Нептун ♆ -->
            <div class="orbit orbit-8 absolute top-1/2 left-1/2 w-[90%] h-[90%] rounded-full" style="border: 2px solid rgba(216,180,254,0.06);">
              <div class="planet absolute -top-[9px] left-1/2 -translate-x-1/2">
                <div class="w-[17px] h-[17px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(80,120,220,0.6), rgba(60,90,190,0.25)); box-shadow: 0 0 10px rgba(80,120,220,0.15);"></div>
              </div>
            </div>

            <!-- Орбита 9 — Плутон ♇ -->
            <div class="orbit orbit-9 absolute top-1/2 left-1/2 w-[98%] h-[98%] rounded-full" style="border: 1.5px solid rgba(216,180,254,0.04);">
              <div class="planet absolute -top-[6px] left-1/2 -translate-x-1/2">
                <div class="w-[12px] h-[12px] rounded-full" style="background: radial-gradient(circle at 30% 30%, rgba(180,160,170,0.5), rgba(140,120,130,0.2)); box-shadow: 0 0 6px rgba(180,160,170,0.1);"></div>
              </div>
            </div>
          </div>

          <!-- Фото -->
          <div class="relative aspect-[3/4] rounded-3xl overflow-hidden shadow-2xl shadow-lavender-400/20 z-10">
            <img
              src="/images/photos/hero.jpg"
              alt="Астролог Юлия Плотникова"
              class="w-full h-full object-cover"
              loading="eager"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900/10 via-transparent to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Индикатор скролла -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <svg class="w-6 h-6 text-lavender-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>

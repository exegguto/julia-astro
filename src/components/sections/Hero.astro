---
import Button from '../ui/Button.astro';
---

<section class="relative min-h-screen flex items-center overflow-hidden" id="hero">
  <!-- Фон — чистый белый -->
  <div class="absolute inset-0 bg-white"></div>

  <!-- Солнечная система — реалистичная, на всю высоту, с анимацией вращения -->
  <div class="absolute inset-0 pointer-events-none flex items-center justify-center md:justify-end md:pr-[12%] lg:pr-[14%]" aria-hidden="true">
    <div class="solar-system relative" style="width: 85vh; height: 85vh;">
      <!-- Солнце — центральное свечение с пульсацией -->
      <div class="sun-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[10%] h-[10%] rounded-full" style="background: radial-gradient(circle, rgba(192,132,252,0.2) 0%, rgba(192,132,252,0.06) 50%, transparent 75%);"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[4.5%] h-[4.5%] rounded-full" style="background: radial-gradient(circle, rgba(192,132,252,0.35) 0%, rgba(176,125,151,0.15) 60%, transparent 100%);"></div>

      <!-- Лучи солнца (тонкие линии) -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[12%] h-[0.5px] bg-gradient-to-r from-transparent via-lavender-300/20 to-transparent"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-[12%] w-[0.5px] bg-gradient-to-b from-transparent via-lavender-300/20 to-transparent"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[10%] h-[0.5px] bg-gradient-to-r from-transparent via-lavender-300/15 to-transparent rotate-45"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[10%] h-[0.5px] bg-gradient-to-r from-transparent via-lavender-300/15 to-transparent -rotate-45"></div>

      <!-- Орбита 1 — Меркурий (самая быстрая) -->
      <div class="orbit orbit-1 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[28%] h-[28%] rounded-full border border-lavender-300/[0.12]">
        <div class="planet absolute -top-[5px] left-1/2 -translate-x-1/2">
          <div class="w-[10px] h-[10px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(216,180,254,0.6), rgba(192,132,252,0.25));"></div>
        </div>
      </div>

      <!-- Орбита 2 — Венера -->
      <div class="orbit orbit-2 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[44%] h-[44%] rounded-full border border-lavender-300/[0.10]">
        <div class="planet absolute -top-[7px] left-1/2 -translate-x-1/2">
          <div class="w-[14px] h-[14px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(201,160,181,0.55), rgba(176,125,151,0.2));"></div>
        </div>
      </div>

      <!-- Орбита 3 — Земля + Луна -->
      <div class="orbit orbit-3 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[62%] h-[62%] rounded-full border border-lavender-300/[0.08]">
        <div class="planet absolute -top-[9px] left-1/2 -translate-x-1/2">
          <!-- Земля -->
          <div class="relative">
            <div class="w-[18px] h-[18px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(192,132,252,0.5), rgba(168,85,247,0.15));"></div>
            <!-- Луна — вращается вокруг Земли -->
            <div class="moon-orbit absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[34px] h-[34px]">
              <div class="absolute -top-[3px] left-1/2 -translate-x-1/2 w-[6px] h-[6px] rounded-full" style="background: radial-gradient(circle at 40% 40%, rgba(216,180,254,0.5), rgba(192,132,252,0.15));"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Орбита 4 — Марс (самая медленная) -->
      <div class="orbit orbit-4 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[82%] h-[82%] rounded-full border border-lavender-300/[0.06]">
        <div class="planet absolute -top-[6px] left-1/2 -translate-x-1/2">
          <div class="w-[12px] h-[12px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(176,125,151,0.45), rgba(157,97,125,0.12));"></div>
        </div>
      </div>

      <!-- Орбита 5 — далёкая, еле видная (Юпитер) -->
      <div class="orbit orbit-5 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[98%] h-[98%] rounded-full border border-lavender-200/[0.04]">
        <div class="planet absolute -top-[4px] left-1/2 -translate-x-1/2">
          <div class="w-[8px] h-[8px] rounded-full" style="background: radial-gradient(circle at 35% 35%, rgba(216,180,254,0.3), rgba(192,132,252,0.08));"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Контент: два столбца -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full pt-28 pb-16 md:pt-32 md:pb-20">
    <div class="grid md:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Текст слева -->
      <div class="order-2 md:order-1 text-center md:text-left">
        <p class="hero-subtitle font-script text-peach-400 text-xl sm:text-2xl mb-4 opacity-0">Астролог Юлия Плотникова</p>
        <h1 class="hero-title font-heading text-4xl sm:text-5xl lg:text-6xl font-bold text-dark-900 leading-tight mb-6 opacity-0">
          Узнайте свой путь<br/>
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-lavender-400 to-peach-400">через звёзды</span>
        </h1>
        <p class="hero-desc text-lg sm:text-xl text-dark-500 max-w-lg leading-relaxed mb-10 opacity-0 mx-auto md:mx-0">
          Персональные астрологические консультации, которые помогут вам понять себя, раскрыть потенциал и принять верные решения
        </p>
        <div class="hero-cta flex flex-col sm:flex-row gap-4 opacity-0 justify-center md:justify-start">
          <Button href="https://t.me/+79100051667" variant="primary" size="lg">
            ✦ Записаться
          </Button>
          <Button href="#services" variant="outline" size="lg">
            Узнать об услугах
          </Button>
        </div>
      </div>

      <!-- Фото справа -->
      <div class="order-1 md:order-2 flex justify-center hero-photo-wrapper">
        <div class="relative w-[280px] sm:w-[340px] lg:w-[400px]">
          <!-- Фото -->
          <div class="relative aspect-[3/4] rounded-3xl overflow-hidden shadow-2xl shadow-lavender-400/20">
            <img
              src="/images/photos/hero.jpg"
              alt="Астролог Юлия Плотникова"
              class="w-full h-full object-cover"
              loading="eager"
              decoding="async"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900/10 via-transparent to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Индикатор скролла -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <svg class="w-6 h-6 text-lavender-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
    </svg>
  </div>
</section>
